<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp">

            <LinearLayout
                android:id="@+id/id_lay_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/_5sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:weightSum="10"
                                android:layout_weight="2.5"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/logo">
                                </ImageView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="05dp"
                                android:orientation="vertical"
                                android:layout_weight="7.5">

                                <TextView
                                    android:id="@+id/id_txt_reference_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/reference_number"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/text_message_size_13"
                                    android:textColor="@color/color_text_color">
                                </TextView>

                                <TextView
                                    android:layout_marginTop="01dp"
                                    android:id="@+id/id_txt_refund_id"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/refund_number"
                                    android:textSize="@dimen/text_message_size_13"
                                    android:textStyle="bold"
                                    android:textColor="@color/color_text_color">
                                </TextView>

                                <TextView
                                    android:layout_marginTop="01dp"
                                    android:id="@+id/id_txt_refund_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/cancellation_date"
                                    android:textSize="@dimen/text_message_size_13"
                                    android:textColor="@color/color_text_color">
                                </TextView>

                                <TextView
                                    android:layout_marginTop="01dp"
                                    android:id="@+id/id_txt_bus_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/bus_name"
                                    android:textSize="@dimen/text_message_size_13"
                                    android:textColor="@color/color_text_color">
                                </TextView>

                                <TextView
                                    android:layout_marginTop="01dp"
                                    android:id="@+id/id_txt_bording_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/boarding_point"
                                    android:textSize="@dimen/text_message_size_13"
                                    android:textColor="@color/color_text_color">
                                </TextView>

                                <TextView
                                    android:layout_marginTop="01dp"
                                    android:id="@+id/id_txt_final_amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/final_amount"
                                    android:textSize="@dimen/text_message_size_13"
                                    android:textColor="@color/color_text_color">
                                </TextView>


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</layout>

