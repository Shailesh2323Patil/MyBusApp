<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.my_bookings.Activity_My_Booking_Details">

    <RelativeLayout
        android:id="@+id/id_lay_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/id_toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <ScrollView
            android:layout_below="@id/id_toolbar"
            android:layout_above="@+id/btRefund"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/id_card_ticket_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/colorPrimaryBlue"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:weightSum="10">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center|left"
                                android:layout_weight="5">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="05dp"
                                    android:text="@string/travelling_date"
                                    android:gravity="center|left"
                                    android:textSize="@dimen/text_message_size_15"
                                    android:textStyle="bold"
                                    android:textColor="@color/color_white">
                                </TextView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="05dp"
                                    android:text="@string/boarding_time"
                                    android:gravity="center|left"
                                    android:textSize="@dimen/text_message_size_15"
                                    android:textStyle="bold"
                                    android:textColor="@color/color_white">
                                </TextView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="05dp"
                                    android:text="@string/dropping_time"
                                    android:gravity="center|left"
                                    android:textSize="@dimen/text_message_size_15"
                                    android:textStyle="bold"
                                    android:textColor="@color/color_white">
                                </TextView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="05dp"
                                    android:text="@string/bus_name"
                                    android:gravity="center|left"
                                    android:textSize="@dimen/text_message_size_15"
                                    android:textStyle="bold"
                                    android:textColor="@color/color_white">
                                </TextView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/ticket_number"
                                    android:gravity="center|left"
                                    android:layout_marginTop="05dp"
                                    android:textSize="@dimen/text_message_size_15"
                                    android:textStyle="bold"
                                    android:textColor="@color/color_white">
                                </TextView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/boarding_point"
                                    android:gravity="center|left"
                                    android:layout_marginTop="05dp"
                                    android:textSize="@dimen/text_message_size_15"
                                    android:textStyle="bold"
                                    android:textColor="@color/color_white">
                                </TextView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/dropping_point"
                                    android:gravity="center|left"
                                    android:layout_marginTop="05dp"
                                    android:textSize="@dimen/text_message_size_15"
                                    android:textStyle="bold"
                                    android:textColor="@color/color_white">
                                </TextView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/final_amount"
                                    android:gravity="center|left"
                                    android:layout_marginTop="05dp"
                                    android:textSize="@dimen/text_message_size_15"
                                    android:textStyle="bold"
                                    android:textColor="@color/color_white">
                                </TextView>

                                <TextView
                                    android:id="@+id/id_txt_head_return_journey"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/return_journey_coupon"
                                    android:gravity="center|left"
                                    android:layout_marginTop="05dp"
                                    android:textSize="@dimen/text_message_size_15"
                                    android:textStyle="bold"
                                    android:textColor="@color/color_white">
                                </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center|left"
                                android:layout_weight="5">

                                <TextView
                                    android:id="@+id/id_txt_travelling_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:layout_marginTop="05dp"
                                    android:text="@string/travelling_date"
                                    android:gravity="center|left"
                                    android:textSize="@dimen/text_message_size_15"
                                    android:textColor="@color/color_white">
                                </TextView>

                                <TextView
                                    android:id="@+id/id_txt_boarding_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:layout_marginTop="05dp"
                                    android:text="@string/boarding_time"
                                    android:gravity="center|left"
                                    android:textSize="@dimen/text_message_size_15"
                                    android:textColor="@color/color_white">
                                </TextView>

                                <TextView
                                    android:id="@+id/id_txt_dropping_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:layout_marginTop="05dp"
                                    android:text="@string/dropping_time"
                                    android:gravity="center|left"
                                    android:textSize="@dimen/text_message_size_15"
                                    android:textColor="@color/color_white">
                                </TextView>

                                <TextView
                                    android:id="@+id/id_txt_bus_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:layout_marginTop="05dp"
                                    android:text="@string/bus_name"
                                    android:gravity="center|left"
                                    android:textSize="@dimen/text_message_size_15"
                                    android:textColor="@color/color_white">
                                </TextView>

                                <TextView
                                    android:id="@+id/id_txt_ticket_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:text="@string/ticket_number"
                                    android:gravity="center|left"
                                    android:layout_marginTop="05dp"
                                    android:textSize="@dimen/text_message_size_15"
                                    android:textColor="@color/color_white">
                                </TextView>

                                <TextView
                                    android:id="@+id/id_txt_bording_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:text="@string/boarding_point"
                                    android:gravity="center|left"
                                    android:layout_marginTop="05dp"
                                    android:textSize="@dimen/text_message_size_15"
                                    android:textColor="@color/color_white">
                                </TextView>

                                <TextView
                                    android:id="@+id/id_txt_dropping_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:text="@string/dropping_point"
                                    android:gravity="center|left"
                                    android:layout_marginTop="05dp"
                                    android:textSize="@dimen/text_message_size_15"
                                    android:textColor="@color/color_white">
                                </TextView>

                                <TextView
                                    android:id="@+id/id_txt_final_amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:text="@string/final_amount"
                                    android:gravity="center|left"
                                    android:layout_marginTop="05dp"
                                    android:textSize="@dimen/text_message_size_15"
                                    android:textColor="@color/color_white">
                                </TextView>

                                <LinearLayout
                                    android:id="@+id/id_lay_return_journey"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="bottom|center"
                                    android:layout_marginTop="05dp"
                                    android:weightSum="5">

                                    <TextView
                                        android:id="@+id/id_txt_return_journey"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="4"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:singleLine="true"
                                        android:text="@string/return_journey_coupon"
                                        android:gravity="center|left"
                                        android:textSize="@dimen/text_message_size_15"
                                        android:textColor="@color/color_white">
                                    </TextView>

                                    <ImageView
                                        android:id="@+id/id_icon_copy"
                                        android:layout_width="0dp"
                                        android:layout_height="20dp"
                                        android:layout_weight="1"
                                        android:src="@drawable/icon_file_copy_white">
                                    </ImageView>


                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:id="@+id/id_lay_seat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_marginTop="05dp"
                    android:layout_below="@+id/id_card_ticket_info">

                    <TextView
                        android:id="@+id/id_txt_seat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="@string/seat_list"
                        android:paddingLeft="10dp"
                        android:gravity="center|left"
                        android:textSize="@dimen/text_message_size_15"
                        android:textStyle="bold"
                        android:textColor="@color/textColor">
                    </TextView>

                    <TextView
                        android:id="@+id/id_txt_download_invoice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:layout_marginRight="10dp"
                        android:text="@string/view_invoice"
                        android:gravity="center|right"
                        android:textSize="@dimen/text_message_size_15"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryBlue">
                    </TextView>

                </LinearLayout>



                <com.shailesh.mybusappdagger2.util.NonScrollRecyclerView
                    android:id="@+id/id_recyle_seat_booking"
                    android:layout_below="@+id/id_lay_seat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">

                </com.shailesh.mybusappdagger2.util.NonScrollRecyclerView>

            </RelativeLayout>

        </ScrollView>

        <Button
            android:id="@+id/btRefund"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/shape_border_button_primary_color_box"
            android:elevation="05dp"
            android:text="@string/cancel_booking"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_message_size_15" />

    </RelativeLayout>

</layout>
