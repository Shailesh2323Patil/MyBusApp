<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/id_card_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp">

            <LinearLayout
                android:id="@+id/id_lay_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/_5sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:weightSum="10"
                                android:layout_weight="3"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="85dp"
                                    android:layout_height="85dp"
                                    android:src="@drawable/logo">
                                </ImageView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:orientation="vertical"
                                android:layout_weight="7">

                                <TextView
                                    android:id="@+id/id_txt_reference_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/reference_number"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/text_message_size_13"
                                    android:textColor="@color/color_text_color">
                                </TextView>

                                <TextView
                                    android:layout_marginTop="01dp"
                                    android:id="@+id/id_txt_bus_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/bus_name"
                                    android:textSize="@dimen/text_message_size_13"
                                    android:textColor="@color/color_text_color">
                                </TextView>

                                <TextView
                                    android:layout_marginTop="01dp"
                                    android:id="@+id/id_txt_bording_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/boarding_point"
                                    android:textSize="@dimen/text_message_size_13"
                                    android:textColor="@color/color_text_color">
                                </TextView>

                                <TextView
                                    android:layout_marginTop="01dp"
                                    android:id="@+id/id_txt_final_amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/final_amount"
                                    android:textSize="@dimen/text_message_size_13"
                                    android:textColor="@color/color_text_color">
                                </TextView>

                                <TextView
                                    android:layout_marginTop="01dp"
                                    android:id="@+id/id_txt_travelling_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/travelling_date"
                                    android:textSize="@dimen/text_message_size_13"
                                    android:textColor="@color/color_text_color">
                                </TextView>

                                <TextView
                                    android:layout_marginTop="01dp"
                                    android:id="@+id/id_txt_boarding_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/boarding_time"
                                    android:textSize="@dimen/text_message_size_13"
                                    android:textColor="@color/color_text_color">
                                </TextView>

                                <TextView
                                    android:layout_marginTop="01dp"
                                    android:id="@+id/id_txt_return_journey"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:text="@string/return_journey_coupon"
                                    android:textSize="@dimen/text_message_size_13"
                                    android:textColor="@color/color_text_color">
                                </TextView>

                                <LinearLayout
                                    android:id="@+id/id_lay_return_journey"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="bottom|center"
                                    android:weightSum="5">

                                    <TextView
                                        android:id="@+id/id_txt_return_journey_coupon"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="4"
                                        android:singleLine="true"
                                        android:text="@string/return_journey_coupon"
                                        android:gravity="center|left"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/text_message_size_13"
                                        android:textColor="@color/color_text_color">
                                    </TextView>

                                    <ImageView
                                        android:id="@+id/id_icon_copy"
                                        android:layout_width="0dp"
                                        android:layout_height="20dp"
                                        android:layout_weight="1"
                                        android:src="@drawable/icon_file_copy">
                                    </ImageView>


                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</layout>

